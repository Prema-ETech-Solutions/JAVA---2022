		JButton btnNewButton = new JButton("ENCRYPT");
		btnNewButton.addMouseListener(new MouseAdapter() {
			@Override
			public void mouseClicked(MouseEvent e) {
				String str = textField.getText();

				ENCRYPT(str);

			}
